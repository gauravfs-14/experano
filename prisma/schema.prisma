generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  userPreferences String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Event {
  id                Int      @id @default(autoincrement())
  title             String
  description       String
  location          String
  dateTime          DateTime
  image             String
  keywords          Json
  eventType         String
  eventLocationType String
  organizer         String?
  organizerId       Int?
  externalLink      String
  rsvp              Json?
  rsvpCount         Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
